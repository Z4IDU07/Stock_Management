<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink"
    android:orientation="vertical"
    tools:context=".purchase_CREATE">

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="680dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:background="@drawable/custom_edittext"
        android:orientation="vertical"
        android:padding="25dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:backgroundTint="@color/lavender"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="10dp"
            android:text="PURCHASE"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Date Sold"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/pur_dat_create"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="dd/mm/yyyy"
                    android:inputType="date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Product ID"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/pur_id_create"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="#123AB"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Supplier"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/pur_supp_create"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="Supplier's name"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Units/Kg"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/pur_units_create"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="Units/Kg"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Rate per Unit/Kg"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/pur_rate_create"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="â‚¹"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/go_back1_pur"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:text="Go back"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/create_rec_pur"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:text="Create"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>