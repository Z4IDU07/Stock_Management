<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:stretchColumns="1,2"
    android:padding="5dp"
    tools:context=".return_by_customer_MAIN">

    <TableRow android:layout_marginTop="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="10sp"
            android:layout_weight="4"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:background="@drawable/customizebutton"
            android:text="Return By Customer"

            />
    </TableRow>
    <TableRow android:layout_marginTop="60dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="10sp"
            android:layout_weight="4"
            android:textSize="17sp"
            android:text="Select Product ID:"

            />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:hint="p1abc"
            android:padding="10sp"

            />
    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="10sp"
            android:layout_weight="4"
            android:textSize="17sp"
            android:text="Date Received "

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:hint="dd/mm/yyy"
            android:padding="10sp"

            />
    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="10sp"
            android:layout_weight="4"
            android:textSize="17sp"
            android:text="Product ID"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:hint="p1abc"
            android:padding="10sp"

            />
    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="10sp"
            android:layout_weight="4"
            android:textSize="17sp"
            android:text="Customer"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:hint="john smith"
            android:padding="10sp"

            />
    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="10sp"
            android:layout_weight="4"
            android:textSize="17sp"
            android:text="Units/Kg"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:hint="0"
            android:padding="10sp"

            />
    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="10sp"
            android:layout_weight="4"
            android:textSize="17sp"
            android:text="Rate per Units/Kg"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:hint="₹"
            android:padding="10sp"

            />
    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="10sp"
            android:layout_weight="4"
            android:textSize="17sp"
            android:text="Total"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:hint="₹"
            android:padding="10sp"

            />
    </TableRow>
    <TableRow android:layout_marginTop="30dp">
        <Button
            android:id="@+id/create_btn_rc"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="4sp"
            android:layout_weight="3"
            android:textSize="15sp"
            android:background="@drawable/customizebutton"
            android:text="CREATE"/>
        <Button
            android:id="@+id/update_btn_rc"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="4sp"
            android:layout_weight="3"
            android:textSize="15sp"
            android:background="@drawable/customizebutton"
            android:layout_marginLeft="4dp"
            android:text="UPDATE"/>
        <Button
            android:id="@+id/delete_btn_rc"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:padding="4sp"
            android:layout_weight="3"
            android:textSize="15sp"
            android:background="@drawable/customizebutton"
            android:layout_marginLeft="4dp"
            android:text="DELETE"/>

    </TableRow>
    <TableRow android:layout_marginTop="30dp">
        <Button
            android:id="@+id/main_rc"
            android:layout_height="48dp"
            android:layout_width="75dp"
            android:padding="2sp"
            android:layout_weight="3"
            android:textSize="15sp"
            android:background="@drawable/customizebutton"
            android:text="MAIN MENU"/>

    </TableRow>
</TableLayout>