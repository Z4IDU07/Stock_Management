<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".purchase_main">

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="750dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:backgroundTint="@color/lavender"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="10dp"
            android:text="PURCHASE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="45sp" />

        <LinearLayout
            android:layout_width="358dp"
            android:layout_height="52dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pur_search_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Type Product ID"
                android:inputType="text"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pur_searchbtn_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SEARCH" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Date Sold"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/pur_dat_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="dd/mm/yyyy"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Product ID"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/pur_id_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="#1234BC"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Supplier"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/pur_supp_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="Supplier's name"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Units/Kg"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/pur_unit_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="No. of units/kilos"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Rate per Unit/Kg"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/pur_rate_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="₹"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:text="Total"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/pur_tot_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_semibold"
                    android:hint="₹"
                    android:padding="8dp"
                    android:paddingBottom="10dp"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/create_btn_pur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:fontFamily="@font/open_sans_semibold"
                android:text="CREATE"
                android:textSize="16sp" />

            <Button
                android:id="@+id/update_btn_pur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:fontFamily="@font/open_sans_semibold"
                android:text="UPDATE"
                android:textSize="16sp" />

            <Button
                android:id="@+id/delete_btn_pur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_text_light_normal_background"
                android:fontFamily="@font/open_sans_semibold"
                android:text="DELETE"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/main_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:fontFamily="@font/open_sans_semibold"
            android:text="MAIN MENU"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>