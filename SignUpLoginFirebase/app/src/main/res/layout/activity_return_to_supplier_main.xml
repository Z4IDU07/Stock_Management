<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".return_to_supplier_MAIN">

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="810dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_edittext"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:background="#EA4154"
        android:gravity="center_horizontal|center_vertical"
        android:text="RETURN TO SUPPLIER"
        android:textColor="#FFFFFF"
        android:textSize="38sp" />

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Select Product ID:"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/pur_spin_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:text="Date Received"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="dd/mm/yyyy"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:text="Product ID"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="#1234BC"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:text="Supplier"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Supplier's name"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:text="Units/Kg"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="No. of units/kilos"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:text="Rate per Unit/Kg"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="₹"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:text="Total"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="₹"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_btn_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:textSize="16sp"
            android:text="CREATE" />

        <Button
            android:id="@+id/update_btn_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:textSize="16sp"
            android:text="UPDATE" />

        <Button
            android:id="@+id/delete_btn_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_google_signin_btn_text_light_normal_background"
            android:textSize="16sp"
            android:text="DELETE" />
    </LinearLayout>

    <Button
        android:id="@+id/main_rs"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:text="MAIN MENU"
        android:textSize="24sp"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"/>
    </LinearLayout>
</LinearLayout>